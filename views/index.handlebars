<h1>Gourmet Burger Logger</h1>

<h2>Burgers Waiting to be Devoured</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        {{!-- Change this to textarea --}}
        <input type="text" id="ca" name="burger_name">
    </div>



    <button type="submit">Add Burger</button>
</form>
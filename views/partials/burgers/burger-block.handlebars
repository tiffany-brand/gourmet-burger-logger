<li class="burger-li">

    <div class="row p-3">
        <div class="col-8">{{burger_name}}</div>
        <div class="col-2">
            {{#if devoured}}
            <button class="change-devoured btn btn-light btn-sm" data-id="{{id}}" data-newdevoured="{{devoured}}">
                Devour
            </button>
            {{/if}}
        </div>
        <div class="col-2">

            <button class="delete-burger btn btn-light btn-sm" data-id="{{this.id}}"><i
                    class="fas fa-trash  text-danger"></i></button>
        </div>
    </div>
</li>